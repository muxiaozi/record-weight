.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}

.input-weight {
  width: 240rpx;
  height: 160rpx;
  border: #ff6d6d solid 2px;
  text-align: center;
  font-size: 36px;
  border-radius: 8px;
}

.input-container {
  display: flex;
  align-items: flex-end;
}

.unit-weight {
  margin-left: 24rpx;
  font-size: 24px;
  color: gray;
}

.time-tips {
  margin-top: 128rpx;
  color: gray;
}

.confirm-button {
  margin-top: 32rpx;
  width: 70%;
  color: white;
  background-color: #ff6d6d;
}
